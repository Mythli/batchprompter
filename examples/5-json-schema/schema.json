{
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the character"
    },
    "class": {
      "type": "string",
      "description": "The character class (e.g. Wizard, Warrior)"
    },
    "level": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    },
    "stats": {
      "type": "object",
      "properties": {
        "strength": { "type": "integer", "minimum": 1, "maximum": 20 },
        "intelligence": { "type": "integer", "minimum": 1, "maximum": 20 },
        "dexterity": { "type": "integer", "minimum": 1, "maximum": 20 }
      },
      "required": ["strength", "intelligence", "dexterity"],
      "additionalProperties": false
    },
    "inventory": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "maxItems": 5
    },
    "backstory": {
      "type": "string",
      "maxLength": 200
    }
  },
  "required": ["name", "class", "level", "stats", "inventory", "backstory"],
  "additionalProperties": false
}
