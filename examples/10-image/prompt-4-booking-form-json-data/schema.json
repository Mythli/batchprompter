{
    "type": "object",
    "properties": {
        "companyName": {
            "type": "string",
            "description": "Ein kurzer, symbolischer Firmenname. Maximal 12 Zeichen.",
            "maxLength": 12
        },
        "header": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "description": "Titel des Angebots, z.B. 'Alpaka Wanderung' oder 'Erste Hilfe Kurs'. Maximal 25 Zeichen.",
                    "maxLength": 25
                },
                "subtitle": {
                    "type": "string",
                    "description": "Dauer und Preis, z.B. '(9 UE) 59,00 €' oder 'ab 29,00 €'. Maximal 30 Zeichen.",
                    "maxLength": 30
                },
                "details": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "maxLength": 40
                    },
                    "description": "Ort und Zeit, z.B. ['Ort: Berlin', 'Zeit: 14:00 Uhr']. Maximal 40 Zeichen pro Zeile."
                }
            },
            "required": ["title", "subtitle", "details"]
        },
        "stepper": {
            "type": "object",
            "properties": {
                "step1": {
                    "type": "string",
                    "description": "Name des ersten Schritts, z.B. 'Termin wählen'. Maximal 20 Zeichen.",
                    "maxLength": 20
                },
                "step2": { "type": "string", "default": "2" },
                "step3": { "type": "string", "default": "3" }
            },
            "required": ["step1", "step2", "step3"]
        },
        "inputs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "type": "string",
                        "description": "Label des Eingabefelds, z.B. 'Datum*', 'Teilnehmer*'. Maximal 25 Zeichen.",
                        "maxLength": 25
                    },
                    "value": {
                        "type": "string",
                        "description": "Beispielwert, z.B. '15. Nov. 2025'. Maximal 30 Zeichen.",
                        "maxLength": 30
                    }
                },
                "required": ["label", "value"]
            },
            "minItems": 3,
            "maxItems": 3
        },
        "footer": {
            "type": "object",
            "properties": {
                "backText": { "type": "string", "default": "Zurück" },
                "nextText": { "type": "string", "default": "Weiter" }
            },
            "required": ["backText", "nextText"]
        }
    },
    "required": ["companyName", "header", "stepper", "inputs", "footer"]
}
